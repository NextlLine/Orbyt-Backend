generator client {
  provider      = "prisma-client-js"
  output        = "./generated/prisma"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id                 String              @id @default(uuid())
  activatedAt        DateTime?
  name               String
  email              String              @unique
  hash               String
  financeWallets     FinanceWallet[]     
  investmentWallets  InvestmentWallet[]  
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
}

model InvestmentWallet {
  id           String        @id @default(uuid())
  name         String
  currencyId   String
  currency     Currency      @relation(fields: [currencyId], references: [id])
  investments  Investment[]
  userId       String
  user         User          @relation(fields: [userId], references: [id])
}

model Investment {
  id             String              @id @default(uuid())
  ticker         String
  category       InvestmentCategory
  quantity       Float
  currentPrice   Float
  walletId       String
  wallet         InvestmentWallet    @relation(fields: [walletId], references: [id])
}

model Currency {
  id       String   @id @default(uuid())
  symbol   String
  code     String   @unique
  wallets  InvestmentWallet[]
  finances FinanceWallet[]
}

model FinanceWallet {
  id             String          @id @default(uuid())
  name           String
  balance        Float
  currencyId     String
  currency       Currency        @relation(fields: [currencyId], references: [id])
  transactions   Transaction[]
  monthReports   MonthReport[]
  userId         String
  user           User            @relation(fields: [userId], references: [id])
}

model MonthReport {
  id             String       @id @default(uuid())
  month          Int
  year           Int
  monthBalance   Float
  walletId       String
  wallet         FinanceWallet  @relation(fields: [walletId], references: [id])
}

model Transaction {
  id          String            @id @default(uuid())
  description String
  amount      Float
  date        DateTime
  type        TransactionType
  status      TransactionStatus
  walletId    String
  wallet      FinanceWallet     @relation(fields: [walletId], references: [id])
}

enum TransactionType {
  FOOD
  HEALTH
  OTHER
}

enum TransactionStatus {
  PENDING
  PAID
  RECEIVED
}

enum InvestmentCategory {
  STOCK
  FII
  ETF
  CRYPTO
  FIXED_INCOME
}